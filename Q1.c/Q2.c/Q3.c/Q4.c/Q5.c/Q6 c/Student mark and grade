#include <stdio.h>

int main() {
    int s1, s2, s3;
    float total, avg;

    printf("Enter marks of 3 subjects: ");
    scanf("%d %d %d", &s1, &s2, &s3);

    // Fail if <35 in any subject
    if (s1 < 35 || s2 < 35 || s3 < 35) {
        printf("Result: FAIL (scored below 35 in one subject)\n");
        return 0;
    }

    total = s1 + s2 + s3;
    avg = total / 3.0;

    printf("Total = %.2f\n", total);
    printf("Average = %.2f\n", avg);

    if (avg >= 70)
        printf("Grade: Distinction\n");
    else if (avg >= 60)
        printf("Grade: First Class\n");
    else if (avg >= 50)
        printf("Grade: Second Class\n");
    else if (avg >= 35)
        printf("Grade: Third Class\n");
    else
        printf("FAIL\n");

    return 0;
}
